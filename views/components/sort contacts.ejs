
<%- include ('header.ejs') %> 
<div class="w-full max-w-lg m-auto mt-40">
<form method="POST" action="/sortContacts" class="bg-white shadow-lg rounded px-8 pt-6 pb-8 mb-4">

    <div class="mb-4">
        <p class="text-2xl">Sort Contact Numbers</p>
      <label class="block text-gray-700 text-sm font-bold mb-2 text-2xl">
        number without 0 and country code
      </label>
      <input type="text" name="totalDigits" placeholder="enter Total number of digits in a number" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" autocomplete="off" required>
    </div>
      <input type="number" name="firstDigit" placeholder="enter first number of digits in a number" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" autocomplete="off" required max="9" min="1">
      <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full">Add  </button>
    </div>
    
   </form>
</div>
